/* pages/exam03/exam03.wxss */
/*背景图片*/
.detail-container{
  height:400rpx;
  width:100%;
  filter:blur(25rpx);/*模糊滤镜*/
  opacity: 0.5;/*透明度*/
}
/*遮罩层*/
.detail-mask{
    position: absolute;
    width: 100%;
    height: 400rpx;
    top:0;
    left: 0;
    background-color: #555;
    z-index: -1;
}
/*电影详情列表*/
.detail-info{
  position: absolute;
  display: flex;
  top:0;
  left: 0;
  width:100%;
  height: 400rpx;
  padding: 20rpx;
}
.detail-img{
    width:280rpx;
    height: 90%;
    margin-right: 24rpx;
}
/*右侧区域*/
.detail{
  flex-grow:1;/*右侧剩余的空间占满*/
  line-height: 60rpx;
}
.detail view{
    color:#fff;/*字体颜色*/
    font-size: 24rpx;
}
/*打分样式*/
.detail .detail-sc{/*加一个类名提升权值*/
  color:#fc0;
  font-size: 36rpx;
  font-weight: 700;
}
/*详情描述样式*/
.desc{
  padding: 20rpx;
  font-size: 24rpx;
  color:#555;
}

/*上传的图片的样式*/
.common-img{
    width:200rpx;
    height: 100rpx;
    margin-right: 20rpx;
}









